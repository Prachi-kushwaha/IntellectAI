generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  userId    Int     @id @default(autoincrement())
  clerkId   String  @unique
  email     String  @unique
  username  String  @unique
  firstName String
  lastName  String
  password  String
}













































